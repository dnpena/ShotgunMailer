.container-search
  .search_bar
    %input{'type' => 'text', 'class' => 'form-control', 'placeholder' => 'Search'}
  .search_button
    %button{'type' => 'submit', 'class' => 'btn btn-default square-btn'} Submit
.list_mails
  -if @conversations
    - @conversations.each do |conv|
      = link_to email_path(conv,'json'),id: "mail #{conv.id}",class: 'btn btn-default square-btn mails-btn' do
        .col-md-2
          = check_box_tag "box #{conv.id}", nil,false,class: 'checky'
        .col-md-1
          %i.fa.fa-user
        .col-md-9
          %td.senders
            = @sent ? conv.sender : conv.get_senders
            .subjects
              = @sent ? conv.subject : conv.subject
  -else
    .text-center.pull-down
      =image_tag "inbox-zero.jpg"