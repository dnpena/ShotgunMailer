.email_nav
  -if @conversations
    - @conversations.each do |conv|
      .col-md-2
        = check_box_tag "#{conv.id}", nil,false,class: 'checky'
      .col-md-1
        %i.fa.fa-user
      .col-md-9
        = link_to email_path(conv,'json'),id: "mail #{conv.id}",class: conv.read ? 'btn btn-default square-btn mails-btn' : 'btn btn-default alert-warning square-btn mails-btn'  do
          %td.senders
            = @sent ? conv.sender : conv.get_senders
            .subjects
              = @sent ? conv.subject : conv.subject
  -else
    .text-center.pull-down
      =image_tag "inbox-zero.jpg"